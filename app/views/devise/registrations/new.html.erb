<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <!--Conditional copy for basic/pro form -->
      <div class= "text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the Pro account and get access to the community and contact information.</p>
        <% else %> 
          <h1>Basic account</h1>
          <p>Sign up for free and get Basic access to the community.</p>
        <% end %>
      </div>
      
      <!--Conditional display for basic/pro signup-->
      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>